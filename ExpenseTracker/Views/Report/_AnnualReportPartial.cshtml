@model ExpenseTracker.Services.AnnualReportData

<div class="row">
    <div class="col-md-8">
        <div class="row">
            <div class="col-sm-6 col-lg-3 mb-3">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-title">Total Amount</h6>
                                <h4>@Model.TotalAmount.ToString("C")</h4>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-dollar-sign fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-lg-3 mb-3">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-title">Tax Deductible</h6>
                                <h4>@Model.TaxDeductibleAmount.ToString("C")</h4>
                                <small>@((Model.TotalAmount > 0 ? (Model.TaxDeductibleAmount / Model.TotalAmount * 100) : 0).ToString("F1"))% of total</small>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-receipt fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-lg-3 mb-3">
                <div class="card bg-warning text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-title">Recurring</h6>
                                <h4>@Model.RecurringAmount.ToString("C")</h4>
                                <small>@((Model.TotalAmount > 0 ? (Model.RecurringAmount / Model.TotalAmount * 100) : 0).ToString("F1"))% of total</small>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-sync-alt fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-lg-3 mb-3">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-title">Transactions</h6>
                                <h4>@Model.TotalTransactions</h4>
                                <small>@((Model.TotalTransactions > 0 ? Model.TotalAmount / Model.TotalTransactions : 0).ToString("C")) avg</small>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-list fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Financial Year Tax Summary for Australian Tax -->
        @if (Model.IsFinancialYear)
        {
            <div class="alert alert-info">
                <h6><i class="fas fa-info-circle me-2"></i>Australian Tax Year Summary (FY @Model.Year/@(Model.Year + 1))</h6>
                <div class="row">
                    <div class="col-md-6">
                        <strong>Tax Deductible Expenses:</strong> @Model.TaxDeductibleAmount.ToString("C")
                    </div>
                    <div class="col-md-6">
                        <strong>Non-Deductible Expenses:</strong> @((Model.TotalAmount - Model.TaxDeductibleAmount).ToString("C"))
                    </div>
                </div>
                <small class="text-muted">
                    <i class="fas fa-exclamation-triangle me-1"></i>
                    Please consult with a qualified tax professional for tax advice. This is for informational purposes only.
                </small>
            </div>
        }

        @if (Model.MonthlyBreakdown.Any())
        {
            <div class="card mb-3">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-calendar-alt me-2"></i>
                        @if (Model.IsFinancialYear)
                        {
                            <text>Monthly Breakdown (Financial Year)</text>
                        }
                        else
                        {
                            <text>Monthly Breakdown (Calendar Year)</text>
                        }
                    </h6>
                </div>
                <div class="card-body">
                    <canvas id="monthlyChart" width="800" height="400"></canvas>
                </div>
            </div>
        }

        @if (Model.CategoryBreakdown.Any())
        {
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-tags me-2"></i>Category Breakdown</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Category</th>
                                    <th class="text-end">Amount</th>
                                    <th class="text-end">Percentage</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var category in Model.CategoryBreakdown.OrderByDescending(c => c.Value))
                                {
                                    var percentage = Model.TotalAmount > 0 ? (category.Value / Model.TotalAmount * 100) : 0;
                                    <tr>
                                        <td>@category.Key</td>
                                        <td class="text-end">@category.Value.ToString("C")</td>
                                        <td class="text-end">@percentage.ToString("F1")%</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="col-md-4">
        @if (Model.CategoryBreakdown.Any())
        {
            <div class="card mb-3">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Category Distribution</h6>
                </div>
                <div class="card-body">
                    <canvas id="categoryChart" width="300" height="300"></canvas>
                </div>
            </div>
        }

        @if (Model.CurrencyBreakdown.Count > 1)
        {
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-coins me-2"></i>Currency Breakdown</h6>
                </div>
                <div class="card-body">
                    @foreach (var currency in Model.CurrencyBreakdown.OrderByDescending(c => c.Value))
                    {
                        <div class="d-flex justify-content-between mb-2">
                            <span>@currency.Key</span>
                            <strong>@currency.Value.ToString("N2")</strong>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        @if (Model.CategoryBreakdown.Any())
        {
            <text>
            // Category Chart
            const categoryCtx = document.getElementById('categoryChart').getContext('2d');
            const categoryChart = new Chart(categoryCtx, {
                type: 'doughnut',
                data: {
                    labels: [@Html.Raw(string.Join(",", Model.CategoryBreakdown.Select(c => "'" + c.Key + "'")))],
                    datasets: [{
                        data: [@string.Join(",", Model.CategoryBreakdown.Select(c => c.Value.ToString("F2")))],
                        backgroundColor: [
                            '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF',
                            '#FF9F40', '#FF6384', '#C9CBCF', '#4BC0C0', '#FF6384'
                        ],
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 15,
                                usePointStyle: true
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const value = context.parsed;
                                    const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                    const percentage = ((value / total) * 100).toFixed(1);
                                    return context.label + ': $' + value.toFixed(2) + ' (' + percentage + '%)';
                                }
                            }
                        }
                    }
                }
            });
            </text>
        }

        @if (Model.MonthlyBreakdown.Any())
        {
            <text>
            // Monthly Chart
            const monthlyCtx = document.getElementById('monthlyChart').getContext('2d');
            
            // Sort months for proper display
            const sortedMonthlyData = Object.entries({
                @Html.Raw(string.Join(",", Model.MonthlyBreakdown.Select(m => $"'{m.Key}': {m.Value.ToString("F2")}")))
            }).sort();
            
            const monthlyChart = new Chart(monthlyCtx, {
                type: 'bar',
                data: {
                    labels: sortedMonthlyData.map(item => {
                        const [year, month] = item[0].split('-');
                        const date = new Date(year, month - 1);
                        return date.toLocaleDateString('en-US', { month: 'short', year: 'numeric' });
                    }),
                    datasets: [{
                        label: 'Monthly Expenses',
                        data: sortedMonthlyData.map(item => item[1]),
                        backgroundColor: '#36A2EB',
                        borderColor: '#36A2EB',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return '$' + value.toFixed(2);
                                }
                            }
                        }
                    },
                    plugins: {
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return 'Expenses: $' + context.parsed.y.toFixed(2);
                                }
                            }
                        }
                    }
                }
            });
            </text>
        }
    </script>
}