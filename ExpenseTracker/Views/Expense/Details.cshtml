@model ExpenseTracker.ViewModels.ExpenseViewModel
@{
    ViewData["Title"] = "Expense Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="fas fa-receipt me-2"></i>Expense Details</h2>
        <p class="text-muted">View detailed information about this expense.</p>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
            <i class="fas fa-edit me-2"></i>Edit
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-list me-2"></i>Back to List
        </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Expense Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Description</label>
                        <p class="form-control-plaintext border rounded p-2 bg-light">@Model.Description</p>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Amount</label>
                        <p class="form-control-plaintext border rounded p-2 bg-light">
                            <strong class="text-success fs-5">@Model.Amount.ToString("C") @Model.Currency</strong>
                        </p>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Category</label>
                        <p class="form-control-plaintext">
                            @if (Model.Category != null)
                            {
                                <span class="badge @Model.Category.ColorClass fs-6">
                                    <i class="@Model.Category.IconClass me-2"></i>@Model.Category.Name
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary fs-6">
                                    <i class="fas fa-question me-2"></i>Uncategorized
                                </span>
                            }
                        </p>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Date</label>
                        <p class="form-control-plaintext border rounded p-2 bg-light">
                            <i class="fas fa-calendar me-2"></i>@Model.ExpenseDate.ToString("MMMM dd, yyyy")
                        </p>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Tax Deductible</label>
                        <p class="form-control-plaintext">
                            @if (Model.IsTaxDeductible)
                            {
                                <span class="badge bg-success fs-6">
                                    <i class="fas fa-check me-2"></i>Yes
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary fs-6">
                                    <i class="fas fa-times me-2"></i>No
                                </span>
                            }
                        </p>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Recurring</label>
                        <p class="form-control-plaintext">
                            @if (Model.IsRecurring)
                            {
                                <span class="badge bg-warning text-dark fs-6">
                                    <i class="fas fa-redo me-2"></i>Yes - @Model.RecurringFrequency
                                </span>
                                @if (Model.RecurringEndDate.HasValue)
                                {
                                    <br>
                                    <small class="text-muted">Ends: @Model.RecurringEndDate.Value.ToString("MMMM dd, yyyy")</small>
                                }
                            }
                            else
                            {
                                <span class="badge bg-secondary fs-6">
                                    <i class="fas fa-times me-2"></i>One-time
                                </span>
                            }
                        </p>
                    </div>
                </div>
                
                @if (Model.IsRecurring && Model.RecurringEndDate.HasValue)
                {
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label class="form-label fw-bold">Recurring End Date</label>
                            <p class="form-control-plaintext border rounded p-2 bg-light">
                                <i class="fas fa-stop-circle me-2"></i>@Model.RecurringEndDate.Value.ToString("MMMM dd, yyyy")
                            </p>
                        </div>
                    </div>
                }
            </div>
        </div>
        
        <!-- Action Buttons -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-md-2">
                        <i class="fas fa-edit me-2"></i>Edit Expense
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger me-md-2">
                        <i class="fas fa-trash me-2"></i>Delete Expense
                    </a>
                    <a asp-action="Create" class="btn btn-outline-success me-md-2">
                        <i class="fas fa-plus me-2"></i>Add New Expense
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-list me-2"></i>Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>