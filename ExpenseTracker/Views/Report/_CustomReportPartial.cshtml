@model ExpenseTracker.Services.CustomReportData

<div class="row">
    <div class="col-md-8">
        <div class="row">
            <div class="col-sm-6 col-lg-3 mb-3">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-title">Total Amount</h6>
                                @if (Model.ShowAudConversion && Model.AudConversionData != null)
                                {
                                    <h4>AUD $@($"{Model.AudConversionData.TotalAudAmount:N2}")</h4>
                                    <small class="opacity-75">@Model.TotalAmount.ToString("C")</small>
                                }
                                else
                                {
                                    <h4>@Model.TotalAmount.ToString("C")</h4>
                                }
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-dollar-sign fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-lg-3 mb-3">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-title">Tax Deductible</h6>
                                <h4>@Model.TaxDeductibleAmount.ToString("C")</h4>
                                <small>@((Model.TotalAmount > 0 ? (Model.TaxDeductibleAmount / Model.TotalAmount * 100) : 0).ToString("F1"))% of total</small>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-receipt fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-lg-3 mb-3">
                <div class="card bg-warning text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-title">Average</h6>
                                <h4>@Model.AverageTransactionAmount.ToString("C")</h4>
                                <small>per transaction</small>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-calculator fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-sm-6 col-lg-3 mb-3">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h6 class="card-title">Transactions</h6>
                                <h4>@Model.TotalTransactions</h4>
                                @{
                                    var days = (Model.ToDate - Model.FromDate).Days + 1;
                                    var avgPerDay = days > 0 ? Model.TotalTransactions / (decimal)days : 0;
                                }
                                <small>@avgPerDay.ToString("F1")/day avg</small>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-list fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if (Model.ShowAudConversion && Model.AudConversionData?.CurrencyBreakdown?.Any() == true)
        {
            <div class="card mb-3">
                <div class="card-header bg-light">
                    <h6 class="mb-0">
                        <i class="fas fa-exchange-alt me-2"></i>Currency Conversion Summary
                        @if (Model.AudConversionData.LastUpdated.HasValue)
                        {
                            <small class="text-muted ms-2">
                                <i class="fas fa-clock"></i> Updated: @Model.AudConversionData.LastUpdated.Value.ToString("MMM dd, HH:mm")
                            </small>
                        }
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var currency in Model.AudConversionData.CurrencyBreakdown)
                        {
                            var exchangeRate = Model.AudConversionData.ExchangeRates.ContainsKey(currency.Key) 
                                ? Model.AudConversionData.ExchangeRates[currency.Key] 
                                : 1.0m;
                            var audAmount = currency.Value * exchangeRate;
                            
                            <div class="col-md-6 col-lg-3 mb-2">
                                <div class="d-flex justify-content-between align-items-center border rounded p-2">
                                    <div>
                                        <strong>@currency.Key</strong><br>
                                        <span class="text-muted">$@($"{currency.Value:N2}")</span>
                                    </div>
                                    <div class="text-end">
                                        <i class="fas fa-arrow-right text-primary mx-2"></i>
                                        <div>
                                            <span class="fw-bold text-success">AUD $@($"{audAmount:N2}")</span><br>
                                            <small class="text-muted">Rate: @($"{exchangeRate:F4}")</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }

        @if (Model.DailyBreakdown.Any())
        {
            <div class="card mb-3">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-chart-line me-2"></i>Daily Expense Trend</h6>
                </div>
                <div class="card-body">
                    <canvas id="dailyChart" width="800" height="400"></canvas>
                </div>
            </div>
        }

        @if (Model.CategoryBreakdown.Any())
        {
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-tags me-2"></i>Category Breakdown</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Category</th>
                                    <th class="text-end">Amount</th>
                                    <th class="text-end">Percentage</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var category in Model.CategoryBreakdown.OrderByDescending(c => c.Value))
                                {
                                    var percentage = Model.TotalAmount > 0 ? (category.Value / Model.TotalAmount * 100) : 0;
                                    <tr>
                                        <td>@category.Key</td>
                                        <td class="text-end">@category.Value.ToString("C")</td>
                                        <td class="text-end">@percentage.ToString("F1")%</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="col-md-4">
        @if (Model.CategoryBreakdown.Any())
        {
            <div class="card mb-3">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Category Distribution</h6>
                </div>
                <div class="card-body">
                    <canvas id="categoryChart" width="300" height="300"></canvas>
                </div>
            </div>
        }

        @if (Model.CurrencyBreakdown.Count > 1)
        {
            <div class="card mb-3">
                <div class="card-header">
                    <h6 class="mb-0"><i class="fas fa-coins me-2"></i>Currency Breakdown</h6>
                </div>
                <div class="card-body">
                    @foreach (var currency in Model.CurrencyBreakdown.OrderByDescending(c => c.Value))
                    {
                        <div class="d-flex justify-content-between mb-2">
                            <span>@currency.Key</span>
                            <strong>@currency.Value.ToString("N2")</strong>
                        </div>
                    }
                </div>
            </div>
        }

        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Period Summary</h6>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <span>Period Duration:</span>
                    <strong>@((Model.ToDate - Model.FromDate).Days + 1) days</strong>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span>Daily Average:</span>
                    @{
                        var totalDays = (Model.ToDate - Model.FromDate).Days + 1;
                        var dailyAvg = totalDays > 0 ? Model.TotalAmount / totalDays : 0;
                    }
                    <strong>@dailyAvg.ToString("C")</strong>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span>Recurring Expenses:</span>
                    <strong>@Model.RecurringAmount.ToString("C")</strong>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        @if (Model.CategoryBreakdown.Any())
        {
            <text>
            // Category Chart
            const categoryCtx = document.getElementById('categoryChart').getContext('2d');
            const categoryChart = new Chart(categoryCtx, {
                type: 'doughnut',
                data: {
                    labels: [@Html.Raw(string.Join(",", Model.CategoryBreakdown.Select(c => "'" + c.Key + "'")))],
                    datasets: [{
                        data: [@string.Join(",", Model.CategoryBreakdown.Select(c => c.Value.ToString("F2")))],
                        backgroundColor: [
                            '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF',
                            '#FF9F40', '#FF6384', '#C9CBCF', '#4BC0C0', '#FF6384'
                        ],
                        borderWidth: 2
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: {
                                padding: 15,
                                usePointStyle: true
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    const value = context.parsed;
                                    const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                    const percentage = ((value / total) * 100).toFixed(1);
                                    return context.label + ': $' + value.toFixed(2) + ' (' + percentage + '%)';
                                }
                            }
                        }
                    }
                }
            });
            </text>
        }

        @if (Model.DailyBreakdown.Any())
        {
            <text>
            // Daily Chart
            const dailyCtx = document.getElementById('dailyChart').getContext('2d');
            
            // Sort daily data for proper display
            const sortedDailyData = Object.entries({
                @Html.Raw(string.Join(",", Model.DailyBreakdown.Select(d => $"'{d.Key}': {d.Value.ToString("F2")}")))
            }).sort();
            
            const dailyChart = new Chart(dailyCtx, {
                type: 'line',
                data: {
                    labels: sortedDailyData.map(item => {
                        const date = new Date(item[0]);
                        return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
                    }),
                    datasets: [{
                        label: 'Daily Expenses',
                        data: sortedDailyData.map(item => item[1]),
                        borderColor: '#36A2EB',
                        backgroundColor: 'rgba(54, 162, 235, 0.1)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return '$' + value.toFixed(2);
                                }
                            }
                        }
                    },
                    plugins: {
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return 'Expenses: $' + context.parsed.y.toFixed(2);
                                }
                            }
                        }
                    }
                }
            });
            </text>
        }
    </script>
}