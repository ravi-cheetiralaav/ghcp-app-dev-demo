@model ExpenseTracker.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = User.Identity?.IsAuthenticated == true ? "Dashboard" : "Welcome";
}

@if (User.Identity?.IsAuthenticated == true)
{
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-tachometer-alt me-2"></i>Dashboard</h2>
            <p class="text-muted">Welcome back! Here's your expense summary.</p>
        </div>
        <a asp-controller="Expense" asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Add New Expense
        </a>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">This Month</h6>
                            <h3 class="mb-0">@Model.CurrencyBreakdown.Values.Sum().ToString("C")</h3>
                        </div>
                        <i class="fas fa-calendar-month fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">This Year</h6>
                            <h3 class="mb-0">@Model.TotalExpensesThisYear.ToString("C")</h3>
                        </div>
                        <i class="fas fa-calendar fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Transactions</h6>
                            <h3 class="mb-0">@Model.TotalTransactionsThisMonth</h3>
                        </div>
                        <i class="fas fa-receipt fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Recurring</h6>
                            <h3 class="mb-0">@Model.RecurringExpenses.Count()</h3>
                        </div>
                        <i class="fas fa-sync-alt fa-2x opacity-75"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Category Breakdown Chart -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-chart-pie me-2"></i>Category Breakdown (This Month)</h5>
                </div>
                <div class="card-body">
                    <canvas id="categoryChart" width="400" height="400"></canvas>
                </div>
            </div>
        </div>

        <!-- Recent Expenses -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5><i class="fas fa-clock me-2"></i>Recent Expenses</h5>
                    <a asp-controller="Expense" asp-action="Index" class="btn btn-outline-primary btn-sm">View All</a>
                </div>
                <div class="card-body">
                    @if (Model.RecentExpenses.Any())
                    {
                        @foreach (var expense in Model.RecentExpenses)
                        {
                            <div class="d-flex justify-content-between align-items-center py-2 border-bottom">
                                <div class="flex-grow-1">
                                    <div class="fw-bold">@expense.Description</div>
                                    <small class="text-muted">
                                        @expense.CategoryName • @expense.ExpenseDate.ToString("MMM dd, yyyy")
                                    </small>
                                </div>
                                <div class="text-end">
                                    <span class="fw-bold">@expense.CurrencySymbol@expense.Amount.ToString("N2")</span>
                                    @if (expense.IsTaxDeductible)
                                    {
                                        <br><small class="badge bg-secondary">Tax Deductible</small>
                                    }
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted text-center py-4">No recent expenses found.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Recurring Expenses -->
    @if (Model.RecurringExpenses.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5><i class="fas fa-sync-alt me-2"></i>Recurring Expenses</h5>
                        <a asp-controller="Expense" asp-action="GetRecurring" class="btn btn-outline-primary btn-sm">Manage</a>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var expense in Model.RecurringExpenses)
                            {
                                <div class="col-md-4 mb-3">
                                    <div class="border rounded p-3">
                                        <div class="fw-bold">@expense.Description</div>
                                        <div class="text-muted small">@expense.CategoryName</div>
                                        <div class="fw-bold text-primary">@expense.CurrencySymbol@expense.Amount.ToString("N2")</div>
                                        <div class="text-muted small">@expense.RecurringFrequency</div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <!-- Welcome Page for Non-Authenticated Users -->
    <div class="text-center">
        <div class="mb-5">
            <i class="fas fa-wallet display-1 text-primary"></i>
        </div>
        <h1 class="display-4 mb-4">Welcome to ExpenseTracker</h1>
        <p class="lead mb-5">Take control of your finances with our modern, web-based expense tracking solution.</p>
        
        <div class="row text-start">
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-chart-bar fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Smart Analytics</h5>
                        <p class="card-text">Get detailed insights into your spending patterns with comprehensive reports and visualizations.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-sync-alt fa-3x text-success mb-3"></i>
                        <h5 class="card-title">Recurring Expenses</h5>
                        <p class="card-text">Automatically track recurring expenses with flexible scheduling options.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-globe fa-3x text-info mb-3"></i>
                        <h5 class="card-title">Multi-Currency</h5>
                        <p class="card-text">Support for 8 major currencies with automatic currency conversion tracking.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-5">
            <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg me-3">
                <i class="fas fa-user-plus me-2"></i>Get Started
            </a>
            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary btn-lg">
                <i class="fas fa-sign-in-alt me-2"></i>Sign In
            </a>
        </div>
    </div>
}

@section Scripts {
    @if (User.Identity.IsAuthenticated && Model.CategoryBreakdown.Any())
    {
        <script>
            // Category Chart
            const categoryCtx = document.getElementById('categoryChart').getContext('2d');
            const categoryChart = new Chart(categoryCtx, {
                type: 'doughnut',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.CategoryBreakdown.Keys)),
                    datasets: [{
                        data: @Html.Raw(Json.Serialize(Model.CategoryBreakdown.Values)),
                        backgroundColor: [
                            '#FF6384',
                            '#36A2EB',
                            '#FFCE56',
                            '#4BC0C0',
                            '#9966FF',
                            '#FF9F40',
                            '#FF6384',
                            '#C9CBCF',
                            '#4BC0C0',
                            '#FF6384',
                            '#36A2EB',
                            '#FFCE56'
                        ]
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    }
                }
            });
        </script>
    }
}
